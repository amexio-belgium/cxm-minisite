---
import type { CodeEmbed } from "@sanity/sanity.types";
import { Code } from "astro:components";

interface Props {
  code: CodeEmbed;
}

const { code } = Astro.props;
---

{
  code?.Code?.code && (
    <Code
      class="rounded-lg py-4"
      theme={code?.style === "dark" ? "slack-dark" : "catppuccin-latte"}
      code={code?.Code?.code}
    />
  )
}
