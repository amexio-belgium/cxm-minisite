---
import type { CardGrid as CardGridType, LongFormText, ServicesCardList } from '@sanity/sanity.types';
import CardGrid from '@components/cms-components/CardGrid.astro';
import ServiceCardList from './ServiceCardList.astro';

interface Props {
  content: Array<ServicesCardList|CardGridType>|undefined,
  language: string,
}

const {content, language} = Astro.props;

---

{content?.map(content => {
    switch(content._type) {
        case 'cardGrid': {
            return <CardGrid cardGrid={content} language={language}></CardGrid>;
        }
        case 'servicesCardList': {
            return <ServiceCardList serviceCardList={content}></ServiceCardList>
        }
    }
})}