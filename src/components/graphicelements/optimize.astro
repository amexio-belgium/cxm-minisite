    animation-delay: 400ms;
    transition: transform 0.5s ease-in-out;
  }

  @keyframes grow {
    from {
      transform: scale(0.2);
    }
    to {
      transform: scale(1);
    }
  }

  .service__item:has(.arrow):hover {
    .arrow {
      transform: scale(1.4);
    }

    .circle {
      transform: scale(1.1);
    }
  }

  @media (prefers-reduced-motion) {
    .arrow,
    .circle {
      animation: none;
    }

    .service__item:has(.arrow):hover {
      .arrow,
      .circle {
        transform: unset;
      }
    }
  }
</style>
