<style is:global>
  .squiggle {
    fill: #ed6c25;
    stroke-width: 0px;
    animation-name: squigle;
    animation-duration: 2s;
    transform-origin: center;
    animation-timing-function: ease-in-out;
    transition: transform 0.5s ease-in-out;
  }

  .pen {
    fill: #0b1215;
    stroke-width: 0px;
    animation-name: pen;
    animation-duration: 1s;
    transform-origin: center;
    animation-timing-function: ease-out;
    transition: transform 0.5s ease-in-out;
  }

  @keyframes pen {
    from {
      transform: translate(50px) scale(0.5) rotate(50deg);
    }
    to {
      transform: translate(-0px) scale(1) rotate(0);
    }
  }

  @keyframes squigle {
    0% {
      transform: rotate(0);
    }
    25% {
      transform: rotate(-10deg);
    }
    50% {
      transform: rotate(10deg);
    }
    100% {
      transform: rotate(0);
    }
  }

  .service__item:has(.squiggle):hover {
    .squiggle {
      transform-origin: center;
      transform: scale(1.1) rotate(-10deg);
    }

    .pen {
      transform-origin: center;
      transform: scale(1.2);
    }
  }

  @media (prefers-reduced-motion) {
    .pen,
    .squiggle {
      animation: none;
    }
    .service__item:has(.squiggle):hover {
      .squiggle,
      .pen {
        transform: unset;
      }
    }
  }
</style>
