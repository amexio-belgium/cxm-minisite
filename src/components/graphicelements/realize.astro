---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<svg
  class={className}
  xmlns="http://www.w3.org/2000/svg"
  version="1.1"
  viewBox="0 0 81 80"
>
  <path
    class="mobile"
    d="M73.3,26.7c-.6-.6-1.3-.9-2.1-.9h-19.1c-.8,0-1.6.3-2.1.9-.6.6-.9,1.3-.9,2.1v33.3c0,.8.3,1.6.9,2.1.6.6,1.3.9,2.1.9h19.1c.8,0,1.6-.3,2.1-.9.6-.6.9-1.3.9-2.1V28.8c0-.8-.3-1.6-.9-2.1ZM70.5,59.6h-17.6v-30h17.6v30Z"
  ></path>
  <path
    class="pc"
    d="M36.1,59.6h-17.5V19.3c0-.7.2-1.2.6-1.6.4-.4,1-.6,1.6-.6h47.7c.5,0,1-.2,1.3-.5.4-.4.5-.8.5-1.3s-.2-1-.5-1.3c-.4-.4-.8-.5-1.3-.5H20.9c-1.6,0-3.1.6-4.2,1.8-1.2,1.2-1.8,2.6-1.8,4.2v40.3h-4.6c-.8,0-1.4.3-2,.8-.5.5-.8,1.2-.8,2s.3,1.4.8,2,1.2.8,2,.8h25.8c.8,0,1.4-.3,2-.8.5-.5.8-1.2.8-2s-.3-1.4-.8-2c-.5-.5-1.2-.8-2-.8Z"
  ></path>
</svg>

<style is:global>
  .mobile {
    fill: #ed6c25;
    stroke-width: 0px;
    animation-name: grow;
    animation-duration: 1s;
    transform-origin: bottom center;
    animation-timing-function: ease-out;
    animation-delay: 800ms;
    transition: transform 0.5s ease-in-out;
  }

  .pc {
    fill: #0b1215;
    stroke-width: 0px;
    animation-name: grow;
    animation-duration: 1.5s;
    transform-origin: bottom center;
    animation-timing-function: ease-out;
    animation-delay: 400ms;
    transition: transform 0.5s ease-in-out;
  }

  @keyframes grow {
    from {
      transform: scale(0.2);
    }
    to {
      transform: scale(1);
    }
  }

  .service__item:has(.mobile):hover {
    .mobile {
      transform: scale(1.23) translate(0, 2px);
    }

    .pc {
      transform: scale(1.1);
    }
  }

  @media (prefers-reduced-motion) {
    .mobile,
    .pc {
      animation: none;
    }
    .service__item:has(.mobile):hover {
      .mobile,
      .pc {
        transform: unset;
      }
    }
  }
</style>
