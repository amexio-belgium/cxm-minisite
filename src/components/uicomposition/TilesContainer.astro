---
import { PortableText } from 'astro-portabletext';

interface Props {
    headline: string|undefined;
    description: any;
    orangeSlant?: boolean;
    class?: string;
}

const { 
    headline, 
    description,
    orangeSlant = false,
    class: className 
} = Astro.props;

---
<div class:list={["relative w-full inline-flex flex-col items-start justify-start gap-20 bg-cover my-20 xl:my-40", className]}>
    {
        orangeSlant ? 
        <div class="absolute bg-[url('/background/slant_orange.svg')] -z-10 w-[250%] md:w-[1240px] h-[1000px] -right-3/4 sm:-right-full lg:-right-1/3 -bottom-20 md:-top-20 bg-contain bg-no-repeat"></div>
        : 
        <slot name="bg-image" />
    }
    
    <div class="flex flex-col items-start justify-start gap-6 lg:w-9/12">
        {headline &&
            <h2 class="font-serif text-3xl text-white text-balance">{headline}</h2>
        }
        {description &&
            <div class="prose prose-ondark text-base font-light max-w-prose">
                <PortableText value={description}/>
            </div>
        }

    </div>
    <div class="inline-flex w-full flex-col items-stretch justify-start gap-8 lg:flex-row">
       <slot />
    </div>
</div>
  