---
interface Props {
    headline: string;
    class?: string;
}

const { 
    headline, 
    class: className 
} = Astro.props;
---

<div class:list={["relative flex flex-col xl:flex-row pt-10 md:pt-20 pb-20 md:pb-40", className]}>
    <h2 class="text-pretty mb-2 font-serif text-3xl w-full xl:sticky xl:pr-8 xl:w-5/12 h-fit top-40 pt-3 text-white">{headline}</h2>
    <div class="flex flex-col w-full gap-2 xl:w-7/12">
        <slot />
    </div>
</div>
