---
import { PortableText } from "astro-portabletext";

interface Props {
  headline: string | undefined;
  description: any;
  headlineTag?: "h3" | "h4" | "h5";
  class?: string;
}
const {
  headline,
  description,
  headlineTag = "h3",
  class: className,
} = Astro.props;

const HeadlineTagName = headlineTag;
---

<div
  class:list={[
    className,
  ]}
>
  <slot />
  <div class="flex flex-col items-center justify-start gap-2 md:gap-4">
    <HeadlineTagName
      class:list={[
        "mx-8 text-center font-serif text-lg sm:mx-0 md:text-xl md:leading-9",
      ]}
      set:html={headline}
    />
    <span class="text-center text-sm font-light">
      <PortableText value={description} />
    </span>
  </div>
</div>
