---
import Details from "../uielements/Details.astro";

interface Props {
  headline: string;
  headlineTag?: "h2" | "h3" | "h4" | "h5" | "h6" | "span";
  class?: string;
}

const { headline, headlineTag = "h3", class: className } = Astro.props;
---

<Details
  headline={headline}
  headlineTag={headlineTag}
  class:list={["border-gray-500 border-b text-white", className]}
>
  <slot />
</Details>
