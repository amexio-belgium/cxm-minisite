---
import type { HTMLAttributes } from 'astro/types';
import { PUBLIC_ASTRO_BASE_PATH } from "../../consts";

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
---

<div class="sm:w-1/3">
  <a href={PUBLIC_ASTRO_BASE_PATH+href}
    class="bg-clip-text duration-300 bg-[length:200%_100%] bg-[100%] hover:bg-[0%_100%] motion-reduce:transition-none transition-all bg-gradient-to-r from-secondary from-0% via-secondary via-50% to-white to-50%  text-transparent font-serif text-xl focus-visible:px-2 focus-visible:outline-none focus-visible:rounded focus-visible:ring-2 focus-visible:ring-tertiary" 
    {...props}>
      <slot />
  </a>
</div>
