---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
---

<div class="sm:w-1/3">
  <a
    href={href}
    class="bg-gradient-to-r from-secondary from-0% via-secondary via-50% to-white to-50% bg-[length:200%_100%] bg-clip-text bg-[100%] font-serif text-xl text-transparent transition-all duration-300 hover:bg-[0%_100%] focus-visible:rounded focus-visible:px-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-tertiary motion-reduce:transition-none"
    {...props}
  >
    <slot />
  </a>
</div>
