---
import { useTranslations } from "src/i18n/utils";
import '../../styles/yt-embed.css';

const { lang } = Astro.params;
const t = useTranslations(lang);

interface Props {
    videoId: string;
    title: string;
    class?: string;
}

const { 
    videoId, 
    title,
    class: className,
} = Astro.props;
---

<lite-youtube class={className} videoid={videoId}>
    <img src={`https://i.ytimg.com/vi/${videoId}/hqdefault.jpg`} alt="" class="lty-poster" loading="lazy" width="480" height="360">
    <a href={`https://youtube.com/watch?v=${videoId}`} class="lty-playbtn">
        <span class="lyt-visually-hidden">{t('youtube.play.prefix')}: {title}</span>     
    </a>
</lite-youtube>


<script src="@lib/yt-embed.js">