---
interface Props {
    headlineTag?: "h2" | "h3" | "h4";
    class?: string;
}

const {
    headlineTag = "h3", 
    class: className
} = Astro.props;

const sizes = {
    h2:
      "text-2xl md:text-3xl md:mt-28 first:mt-0 mb-4 md:mb-8",
    h3:
      "text-xl md:text-2xl mt-8 md:mt-16 first:mt-0",
    h4:
      "text-xl",
}

const HeadlineTagName = headlineTag;
---
<HeadlineTagName class:list={["not-prose font-serif", sizes[headlineTag], className]}>
    <slot />
</HeadlineTagName>